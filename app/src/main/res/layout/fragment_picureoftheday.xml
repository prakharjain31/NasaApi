    <com.agrawalsuneet.dotsloader.loaders.AllianceLoader
        android:id="@+id/loader"
        app:alliance_strokeWidth="5dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_centerInParent="true"
        app:alliance_animDuration="500"
        app:alliance_firstDotsColor="@android:color/holo_red_dark"
        app:alliance_secondDotsColor="@android:color/holo_blue_dark"
        app:alliance_thirdDotsColor="@android:color/holo_green_dark"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/date_edit"
        android:hint="Enter Date"
        android:ems="20"
        android:gravity="center"
        android:layout_margin="32dp" />
<!--    <DatePicker-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:id="@+id/date_picker"-->
<!--        android:scrollbarSize="20dp"-->
<!--        android:scrollbars="horizontal"-->
<!--        android:verticalScrollbarPosition="right"-->
<!--        android:calendarViewShown="false"-->
<!--        android:datePickerMode="spinner" />-->

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:layout_below="@id/date_edit"
        android:layout_margin="16dp" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="395dp"
        android:layout_height="620dp"
        android:layout_below="@id/date_edit"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:visibility="invisible" />


<!--</FrameLayout>-->
</RelativeLayout>
